// Definitions for TauDAC
/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2708";
	
	fragment@0 {
		target = <&i2c1>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			wm8741_left: wm8741@1a {
				#sound-dai-cells = <0>;
				compatible = "wlf,wm8741";
				reg = <0x1a>;
				status = "okay";
			};
			
			wm8741_right: wm8741@1b {
				#sound-dai-cells = <0>;
				compatible = "wlf,wm8741";
				reg = <0x1b>;
				status = "okay";
			};
		};
	};

	fragment@1 {
		target = <&sound>;
		__overlay__ {
			compatible = "singularity-audio,tau-dac";
			i2s-controller = <&i2s>;
			codecs = <&wm8741_left>, <&wm8741_right>;
			status = "okay";
		};
	};

	fragment@2 {
		target = <&i2s>;
		__overlay__ {
			status = "okay";
		};
	};
};
